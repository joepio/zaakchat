{
  "name": "zaakchat",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "cd frontend && vite",
    "build": "cd frontend && tsc -b && vite build",
    "lint": "cd frontend && eslint .",
    "preview": "cd frontend && vite preview",
    "test": "cd frontend && vitest --run",
    "test:watch": "cd frontend && vitest --watch",
    "test:ui": "cd frontend && vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug --grep",
    "test:e2e:one": "playwright test --grep",
    "spec-studio": "docker run --rm --user=root --network=host --init -v \"$(pwd)/asyncapi.yaml:/app/asyncapi.yml\" asyncapi/cli start studio /app/asyncapi.yml",
    "spec-html": "mkdir -p asyncapi-docs && docker run --rm -v \"$(pwd)/asyncapi-embedded.yaml:/app/asyncapi.yml\" -v \"$(pwd)/asyncapi-docs:/app/output\" asyncapi/cli generate fromTemplate /app/asyncapi.yml @asyncapi/html-template@2.3.0 --output /app/output --force-write",
    "spec-validate": "docker run --rm --user=root -v \"$(pwd)/asyncapi.yaml:/app/asyncapi.yml\" asyncapi/cli validate /app/asyncapi.yml",
    "generate": "node scripts/generate-types.js",
    "generate-asyncapi": "cargo run --bin generate_asyncapi",
    "generate-all": "cargo run --bin export_schemas && cargo run --bin generate_asyncapi && node scripts/generate-types.js && cd frontend && vite build",
    "prepare": "husky"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "@uiw/react-json-view": "^1.12.2",
    "minisearch": "^7.2.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@fortawesome/fontawesome-free": "^7.1.0",
    "@playwright/test": "^1.40.0",
    "@tailwindcss/postcss": "^4.1.13",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.1",
    "@testing-library/user-event": "^14.5.3",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "babel-plugin-react-compiler": "19.1.0-rc.3",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "json-schema-to-typescript": "^15.0.4",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.13",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vitest": "^2.1.8"
  },
  "lint-staged": {
    "frontend/**/*.{js,jsx,ts,tsx}": "eslint --config frontend/eslint.config.js --fix"
  }
}
